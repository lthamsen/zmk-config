    macros {
        womp_womp: womp_womp {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp W &kp O &kp M &kp P &kp SPACE &kp W &kp O &kp M &kp P>;
            label = "WOMP_WOMP";
